<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo_restaurant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_action_name"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nom_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Restaurant"/>

            <TextView
                android:id="@+id/apertura_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo!!"/>

            <TextView
                android:id="@+id/bebida_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bebida"/>

            <TextView
                android:id="@+id/preparacion_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preparacion"/>

            <TextView
                android:id="@+id/distancia_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="distancia"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RatingBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="0.1"
                android:numStars="5"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/etrellas_restaurant" />
            <TextView
                android:id="@+id/voto_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(3 Votos)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.example.mylibrary.ProperRatingBar
                android:id="@+id/upperRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:prb_defaultRating="2"
                app:prb_symbolicTick="$"
                app:prb_symbolicTickNormalColor="@android:color/darker_gray"
                app:prb_symbolicTickSelectedColor="@android:color/holo_green_dark"
                app:prb_totalTicks="5"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
